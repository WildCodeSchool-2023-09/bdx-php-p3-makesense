{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>COLLABORATEUR</h1>

    <table class="edit">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ user.lastname }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.firstname }}</td>
        </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ user.occupation }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn" onclick="window.location.href='{{ path('app_admin_index')}}'">Retour à la liste</button>
    <button class="btn" onclick="window.location.href='{{ path('app_admin_edit', {'id': user.id}) }}'">Modifier</button>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
