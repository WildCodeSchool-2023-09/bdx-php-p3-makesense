{% extends 'base.html.twig' %}

{% block title %} Profil {{ user.firstname }} {{ user.lastname }} {% endblock %}

{% block body %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1>

    <div class="profil">

        <div class="profil-bloc">

            <img src="{{ vich_uploader_asset(user) }}" alt="{{ user.photo }}">
            <h3>{{ user.firstname }} {{ user.lastname }}</h3>

            <p>{{ user.occupation }}</p>

        </div>
        <div class="profil-bloc">

            <h3>Description</h3>
            <p>{{ user.description }}</p>

        </div>
        <div class="profil-bloc">

        <h3>Nom prénom : </h3>
        <p>{{ user.firstname }} {{ user.lastname }}</p>

        <h3>Mail :</h3>
        <p>{{ user.email }}</p>
        <h3>Téléphone :</h3>
        <p>{{ user.phoneNumber }}</p>

        <h3>Ville :</h3>
        <p>{{ user.city }}</p>

        <h3>Mon Reseau :</h3>
            {% if user.reseau %}
                <a href="{{ user.reseau }}" target="_blank">{{ user.reseau }}</a>
            {% else %}
                <p>Aucun réseau social spécifié</p>
            {% endif %}
        </div>
    </div>


    <a class="btn" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier profil</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
